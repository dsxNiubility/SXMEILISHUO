<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coral">

        <ImageView
            android:id="@+id/main_item_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@color/bisque"
            tool:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/main_item_vip"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@id/main_item_icon"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="-20dp"
            android:layout_toRightOf="@id/main_item_icon"
            android:background="@color/orange"
            tool:ignore="ContentDescription,RtlHardcoded"/>

        <TextView
            android:id="@+id/main_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/main_item_icon"
            android:textColor="@color/meili_black"
            android:textSize="18sp"
            tool:ignore="RelativeOverlap,RtlHardcoded"
            tool:text="时尚穿搭手册"/>

        <TextView
            android:id="@+id/main_item_desc"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/main_item_icon"
            android:textColor="@color/meili_gray"
            android:textSize="14sp"
            tool:ignore="RtlHardcoded"
            tool:text="给你最真实的穿搭体现，然后巴里巴拉"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/gold"
            android:text="+ 关注"
            android:textColor="@color/meili_pink"
            android:textSize="18sp"
            tool:ignore="HardcodedText,RtlHardcoded"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tool:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/main_item_tips"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/gold"
            tool:ignore="ContentDescription"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/meili_black"
        tool:text="俏皮复古风"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/main_item_time"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/meili_gray"
            android:textSize="14sp"
            tool:ignore="RtlHardcoded"
            tool:text="1分钟前"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/meili_light_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanchedalmond">

        <ImageView
            android:id="@+id/main_item_good"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@color/colorAccent"
            tool:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/main_item_msg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/main_item_good"
            android:background="@color/colorAccent"
            tool:ignore="ContentDescription,RtlHardcoded"/>

        <ImageView
            android:id="@+id/main_item_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/main_item_msg"
            android:background="@color/colorAccent"
            tool:ignore="ContentDescription,RtlHardcoded"/>

        <ImageView
            android:id="@+id/main_item_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="@color/colorAccent"
            tool:ignore="ContentDescription,RtlHardcoded"/>

    </RelativeLayout>

</LinearLayout>